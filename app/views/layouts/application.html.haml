!!! 5
%html
%head
	%title Gidget|Explore Sound
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%nav.navbar.navbar-light.bg-faded
		.row
			%li= link_to "GIDGET", root_path, class: "navbar-brand"
			
			- if user_signed_in?
				%ul.nav.navbar-nav
					%li.nav-item
						%a.nav-link{:href => "/essentials/new"} New Essential
					%li.nav-item.dropdown
						%a#supportedContentDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "http://example.com"} Dropdown
						.dropdown-menu{"aria-labelledby" => "supportedContentDropdown"}
							%a.dropdown-item{:href => "#"} Action
							%a.dropdown-item{:href => "#"} Another action
							%a.dropdown-item{:href => "#"} Something else here
					%li=  link_to "Sign Out",destroy_user_session_path, method: :delete
			- else
				%ul.nav.navbar-nav
					%li.nav-item
						%a.nav-link{:href => "/users/sign_up"}Sign Up
					%li.nav-item
						%a.nav-link{:href => "/users/sign_in"} Sign In
		%form.form-inline.float-xs-right
			%input.form-control{:placeholder => "Search", :type => "text"}/
			%button.btn.btn-outline-success{:type => "submit"} Search

	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"

		= yield



